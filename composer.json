{
    "name": "dan-da/coinparams",
    "description": "provides crypto currency specific information such as version numbers, DNS seeds, etc, available in JSON format",
    "license": "MIT",

    "autoload": {
        "classmap": [ 
            "bindings/php/"
        ]
    },
    
    "require-dev": {
        "dan-da/texttable-php": "^1.0"
    },
    
    "require": {
        "octolab/cleaner": "1.0-alpha"
    },
    
    "extra": {
        "dev-files": {
            "comment": "we use octolab/cleaner to limit files in vendor package",
            "other": [
                "/tools",
                "/coins",
                "/bindings",
                "/vendor",
                "composer.lock",
                ".gitignore",
                "!/bindings/php",
                "*.json",
                "!coinparams.json",
                "*.md",
                "!/README.md"            
            ]
        }
    }
}
